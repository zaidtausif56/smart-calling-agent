# Twilio Configuration
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here

# Flask Configuration
FLASK_SECRET_KEY=your_secret_key_here
FLASK_ENV=development

# TTS Mode: 'fast' for Twilio TTS (faster), 'quality' for Deepgram TTS (better quality but slower)
TTS_MODE=fast

# Twilio Voice Model (used when TTS_MODE=fast)
# Popular options:
# - Polly.Joanna (Female, US English) - Current default
# - Polly.Salli (Female, US English)
# - Polly.Kimberly (Female, US English)
# - Polly.Matthew (Male, US English)
# - Polly.Joey (Male, US English)
# - Polly.Amy (Female, British English)
# - Polly.Brian (Male, British English)
TWILIO_VOICE=Polly.Joanna

# Database
DATABASE_PATH=database.db
PRODUCTS_CSV=Products.csv
